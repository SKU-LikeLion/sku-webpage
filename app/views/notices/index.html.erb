<div class="wrapper">
    <%= render template: "main/_sidebar" %>

<div class="main-panel">
  <!--header-->
  <%= render template: "main/_header" %>
  <!--content-->
  <div class="content">
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-12">
                  <div class="card">
                      <div class="header notice-header">
                          <h4 class="title f-size-l">공지사항</h4>
                          <p class="category">공지사항을 올리는 곳입니다.</p>
                          <%= link_to '글쓰기', new_notice_path, class: 'btn btn-info btn-fill btn-wd btn-write' %>
                      </div>
                      <div class="content table-responsive table-full-width">
                          <table class="table table-striped m-y-3">
                              <thead>
                                  <tr class="table-head">
                                  	<th class="text-center">제목</th>
                                  	<th class="text-center">글쓴이</th>
                                  	<th class="text-center">날짜</th>
                                  	<th class="text-center">조회수</th>
                              	</tr>
                              </thead>
                              <tbody>
                                <% @notices.each do |notice| %>
                                  <tr>
                                  	<td><%= link_to "#{notice.title}", notice, class: 'board-title-style' %></td>
                                  	<td class="text-center">글쓴이다</td>
                                  	<td class="text-center"><%= notice.created_at.strftime("%Y-%m-%d") %></td>
                                  	<td class="text-center">조회수다</td>
                                  </tr>
                                <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
          
          <!-- pagination -->
          <div class="row text-center">
            <%= paginate @notices %>
          </div>
      </div>
  </div>

  <!-- footer -->
  <%= render template: "main/_footer" %>


